{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node", "hardhat"]
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",   // âœ… this is where type bindings are generated
    "./hardhat.config.ts",
    "./contracts"          // optional: if you're using decorators/types inside contracts
  ]
}
